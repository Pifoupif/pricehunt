<div class="container container-alerts-show">
  <div class="back-white-show">
    <%= image_tag "back-white-2.svg", alt: "white-back", class:"back-white-show-picture" %>
    <div class="row container-alert container-alert-show">
      <div class="col-xs-6">
        <div class="alert-picture">
          <%= image_tag @alert.product.photo, crop: :fill, height: 300, width: 300 %>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="product-infos-alert">
          <h1><%= @alert.product.name %></h1>
          <div class="alert-infos-show">
            <div class="price-alert-infos">
              <p></i> Target price: <strong>€<%= @alert.target_price.to_i %></strong>  </p>
              <br>
              <p></i> Current price: <strong>€<%= @alert.product.description.to_i %></strong> </p>
            </div>
            <br>
            <% target_price = @alert.target_price %>
            <% current_price = @alert.product.description %>
            <% difference = (current_price.to_i - target_price.to_i).to_i %>            <div class="arrow-alert-show">
              <i class="far fa-arrow-alt-circle-down arrow-alert"></i>
            </div>
            <br>
            <br>
            <br>
            <br>
            <div class="difference-price">
              <p></i> Difference: <strong>€<%= difference %></strong> </p>
            </div>
            <br>
            <div class="contact-alert">
              <p>Contact me by:</p>
              <ul class='inline'>
                <% if @alert.by_email %>
                <li><i class="fas fa-at"></i></li>
                <% end %>
                <% if @alert.by_text_message %>
                <li><i class="fas fa-sms"></i></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="graph-price">
    <%#= cl_image_tag booking.product.photo, crop: :fill, class: 'icon' %>
    <p>Graph price evolution</p>
  </div>

  <div class="alert-back">
    <%= link_to 'Back to all my alerts', alerts_path, class:"btn btn-success no-decoration see-detail" %>
  </div>
</div>
