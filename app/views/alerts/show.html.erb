<div class="container container-alerts">
  <div class="back-white">
    <%= image_tag "back-white.png", alt: "white-back", class:"back-white-picture" %>
    <div class="row container-alert">
      <div class="col-xs-6">
        <div class="alert-picture">
          <%#= cl_image_tag booking.product.photo, crop: :fill, class: 'icon' %>
          <%= image_tag @alert.product.photo, crop: :fill, height: 300, width: 300 %>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="product-infos-alert">
          <h1><%= @alert.product.name %></h1>
          <div class="alert-infos-show">
           <p><i class="fas fa-bullseye"></i> Target price: €<%= @alert.target_price.to_i %> </p>
           <p><i class="fas fa-dollar-sign"></i> Current price €<%= @alert.product.description.to_i %></p>
           <% target_price = @alert.target_price %>
           <% current_price = @alert.product.description %>
           <% difference = (current_price.to_i - target_price.to_i).to_i %>
           <p><i class="fas fa-hand-holding-usd"></i> Difference €<%= difference %></p>
           <p>Contact me by:</p>
           <ul class='inline'>
            <% if @alert.by_email %>
            <li><i class="fas fa-at"></i></li>
            <% end %>
            <% if @alert.by_text_message %>
            <li><i class="fas fa-sms"></i></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="graph-price">
    <%#= cl_image_tag booking.product.photo, crop: :fill, class: 'icon' %>
    <p>Graph price evolution</p>
  </div>

  <div class="alert-back">
    <%= link_to 'Back to all my alerts', alerts_path, class:"btn btn-success no-decoration see-detail" %>
  </div>
</div>
</div>
