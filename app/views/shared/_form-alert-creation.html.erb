<%= simple_form_for [@product, @alert] do |f| %>
  <%= f.input :target_price, required: true, label: "Target Price", error: 'Please specify your target price' %>
  <%= f.input :by_email, as: :boolean, boolean_style: :inline %>
  <%= f.input :by_text_message, as: :boolean, boolean_style: :inline %>
  <%= f.submit "SAVE", class: "btn btn-success submit-booking" %>
<% end %>

