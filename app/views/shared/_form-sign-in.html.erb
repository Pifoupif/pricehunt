<%= simple_form_for(User.new, url: user_session_path) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                error: 'Incorrect login information'
                 %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  <p>No account yet : <%= link_to 'sign up', new_user_registration_path %></p>

  </div>

<%#= render "devise/shared/links", resource_name: 'user' %>

</div>
<div class="modal-footer">
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
  </div>
<!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
<button type="button" class="btn btn-primary">Save changes</button> -->
<% end %>
